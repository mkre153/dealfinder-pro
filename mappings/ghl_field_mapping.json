    "potential": "potential",
    "active_buyer": "active_buyer",
    "sms_opt_in": "sms_opt_in",
    "email_opt_in": "email_opt_in"
  },
  "field_validation": {
    "budget_min": {
      "type": "number",
      "min": 0,
      "required": true
    },
    "budget_max": {
      "type": "number",
      "min": 0,
      "required": true
    },
    "location_preference": {
      "type": "text",
      "max_length": 500,
      "description": "Comma-separated list of cities or ZIP codes"
    },
    "property_type_preference": {
      "type": "text",
      "max_length": 200,
      "description": "Comma-separated list: single_family, multi_family, condo, townhouse"
    },
    "min_bedrooms": {
      "type": "number",
      "min": 0,
      "max": 20
    },
    "deal_score": {
      "type": "number",
      "min": 0,
      "max": 100,
      "required": true
    },
    "list_price": {
      "type": "number",
      "min": 0,
      "required": true
    }
  },
  "notification_settings": {
    "sms": {
      "quiet_hours_start": 21,
      "quiet_hours_end": 8,
      "max_per_buyer_per_day": 3,
      "char_limit": 160
    },
    "email": {
      "enabled": true,
      "include_property_images": true
    }
  },
  "rate_limiting": {
    "max_requests_per_minute": 95,
    "time_window_seconds": 60,
    "retry_attempts": 3,
    "backoff_strategy": "exponential"
  },
  "cache_settings": {
    "buyer_cache_duration_minutes": 60,
    "custom_fields_cache_duration_minutes": 1440,
    "pipeline_stages_cache_duration_minutes": 1440
  }
}
