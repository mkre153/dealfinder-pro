    "under_contract": "Under Contract",
    "closed_won": "Closed - Won",
    "closed_lost": "Closed - Lost"
  },
  "workflows": {
    "hot_deal_alert": {
      "name": "Hot Deal Alert",
      "description": "Triggered for properties scoring 90+ to alert team immediately",
      "trigger_score_threshold": 90
    },
    "property_match": {
      "name": "Property Match Notification",
      "description": "Triggered when property matches buyer criteria",
      "trigger_match_threshold": 70
    },
    "new_opportunity": {
      "name": "New Opportunity Created",
      "description": "Triggered when new property opportunity is created",
      "trigger_on": "opportunity_create"
    },
    "showing_scheduled": {
      "name": "Showing Follow-up",
      "description": "Triggered when property showing is scheduled",
      "trigger_on": "showing_scheduled"
    }
  },
  "tags": {
    "automated": "automated",
    "dealfinder": "dealfinder",
    "hot_deal": "hot_deal",
