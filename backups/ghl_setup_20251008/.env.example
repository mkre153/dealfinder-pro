# DealFinder Pro - Environment Variables Template
# Copy this file to .env and fill in your actual credentials
# NEVER commit .env to version control!

# ========================================
# DATABASE CREDENTIALS
# ========================================
DB_USER=postgres
DB_PASSWORD=your_database_password_here
DB_HOST=localhost
DB_PORT=5432
DB_NAME=dealfinder

# ========================================
# GOHIGHLEVEL API
# ========================================
GHL_API_KEY=your_ghl_api_key_here
GHL_LOCATION_ID=your_ghl_location_id_here

# Optional: GHL specific settings
# GHL_PIPELINE_ID=your_pipeline_id
# GHL_WORKFLOW_HOT_DEAL=workflow_id_for_hot_deals
# GHL_WORKFLOW_BUYER_MATCH=workflow_id_for_buyer_matches

# ========================================
# EMAIL SETTINGS (SMTP)
# ========================================
EMAIL_USERNAME=your_email@gmail.com
EMAIL_PASSWORD=your_app_specific_password

# For Gmail: Use App Password (not your regular Gmail password)
# Generate at: https://myaccount.google.com/apppasswords

# ========================================
# SMS NOTIFICATIONS (Optional)
# ========================================
# Twilio (if using Twilio instead of GHL for SMS)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+15551234567

# ========================================
# MLS DATABASE (Optional)
# ========================================
# MLS_HOST=mls.database.com
# MLS_PORT=1433
# MLS_DATABASE=MLS_Listings
# MLS_USER=mls_username
# MLS_PASSWORD=mls_password

# ========================================
# DATA ENRICHMENT APIs (Optional)
# ========================================
# ATTOM_API_KEY=your_attom_api_key
# RENTOMETER_API_KEY=your_rentometer_api_key
# ZILLOW_API_KEY=your_zillow_api_key
# WALKSCORE_API_KEY=your_walkscore_api_key

# ========================================
# WEBHOOK INTEGRATIONS (Optional)
# ========================================
# WEBHOOK_URL=https://your-webhook-endpoint.com/dealfinder
# WEBHOOK_SECRET=your_webhook_secret_key

# ========================================
# DEVELOPMENT/TESTING
# ========================================
# Set to 'development' for testing, 'production' for live use
ENVIRONMENT=development

# Enable dry run mode (doesn't create GHL opportunities or send notifications)
DRY_RUN=false
